@page
@model RestaurantManager.Pages.Products.IndexModel
@{
    ViewData["Title"] = "Menu Products";
}

<div class="d-flex justify-content-between align-items-center mb-4">
    <h1>Menu Products</h1>
    <a asp-page="Create" class="btn btn-primary">Add New Product</a>
</div>

<div class="card">
    <div class="card-body">
        <table class="table table-hover">
            <thead>
                <tr>
                    <th>Product Name</th>
                    <th>Category</th>
                    <th>Cost</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model.Products)
                {
                    <tr>
                        <td>@item.ProductName</td>
                        <td>@item.Category?.CategoryName</td>
                        <td>$@item.Cost</td>
                        <td>
                            <a asp-page="./Edit" asp-route-id="@item.ProductId" class="btn btn-sm btn-outline-primary">Edit</a>
                            <a asp-page="./Delete" asp-route-id="@item.ProductId" class="btn btn-sm btn-outline-danger">Delete</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>
