@page
@model RestaurantManager.Pages.Admin.IndexModel
@{
    ViewData["Title"] = "Admin Dashboard";
}

<div class="admin-dashboard">
    <h1>Admin Dashboard</h1>
    <p>Welcome to the admin panel.</p>
    
    <div class="dashboard-grid">
        <div class="card">
            <h3>Users</h3>
            <p>Manage system users and roles.</p>
            <a asp-page="./Users" class="btn btn-primary">Manage Users</a>
        </div>
        <div class="card">
            <h3>Inventory</h3>
            <p>Manage products and stock.</p>
            <a asp-page="/Inventory/Index" class="btn btn-primary">Manage Inventory</a>
        </div>
        <div class="card">
            <h3>Reports</h3>
            <p>View sales and order reports.</p>
            <a asp-page="/Admin/Reports" class="btn btn-primary">View Reports</a>
        </div>
    </div>
</div>
